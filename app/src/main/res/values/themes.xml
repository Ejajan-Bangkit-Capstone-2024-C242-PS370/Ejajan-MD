<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ejajan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue2</item>
        <item name="colorPrimaryVariant">@color/blue1</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/utama</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
    </style>

    <style name="Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="Button_noBackground">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:backgroundTint">@color/utama</item>
        <item name="android:textColor">@color/black</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/utama</item>
        <item name="contentPadding">5dp</item>
    </style>
</resources>